extends layout

block content
  link(rel = "stylesheet", href = "/stylesheets/todo_main.css")
  script(src="/javascripts/todo_main.js")
  script(src="https://kit.fontawesome.com/4f95742a0c.js" crossorigin="anonymous")

  
  section.todo_main
    h1(id="main_title") MY TODO LIST
    form(method="POST")
      input(type="text", name="t_text", id="todo", placeholder="해야할 일")
      button(type="button", id="btn-save") 저장

    article.todo_list
      ul
        each vo in todoList
          li(data-id=vo._id)= vo.t_text
            i.fas.fa-trash-alt.fa-pull-right(onclick="del_click(this)")
