extends layout

block content
  link(rel="stylesheet", href="/stylesheets/todo_main.css")
  script(src="/javascripts/todo_main.js")
  script.
    var todo_data = ""
    todo_data = `!{todo_data}`
  script(src = "/javascripts/todo_sub.js")

  section.todo_main
    h1(id="main_title") MY TODO LIST
    form(method= "POST")
      input(type="text", name="todo", id="todo", placeholder="해야할 일")
      button(type="button", id="btn-save") 저장

    article.todo_list
      button(id="btn-new") 새로고침
      ul#todo_list